class Solution:
    def longestBalanced(self, s: str) -> int:
        res = 1
        n = len(s)
        for i in range(n-1):
            chars = defaultdict(int)
            if n-i <= res:
                return res
            for j in range(i, n):
                chars[s[j]] += 1
                if len(set(chars.values())) == 1:
                    res = max(res, j-i+1)
        return res
